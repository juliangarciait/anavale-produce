<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="partner_sequence_change_wizard_form_view" model="ir.ui.view">
            <field name="name">partner.sequence.change.wizard.form</field>
            <field name="model">partner.sequence.change.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="partner_id"/>
                        <field name="sequence_id"/>
                        <field name="number_next"/>
                        <field name="last_used_number"/>
                        <field name="new_number_next"/>
                    </group>
                    <footer>
                        <button string="Update Next Sequence Number" name="update_number_next" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
