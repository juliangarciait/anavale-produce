<template id="report_saleorder_no_amounts">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="anavale.report_saleorder_document_no_amounts" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>


