    <!-- Action to open repack wizard -->
 <record id="view_order_form_inherit_repack_btn" model="ir.ui.view">
    <field name="name">sale.order.form.inherit.repack.btn</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
      <xpath expr="//header" position="inside">
        <button name="action_open_repack_wizard"
                type="object"
                string="Create Repack"
                class="oe_highlight"
                attrs="{'invisible': [('state','in',('cancel','done'))]}"/>
      </xpath>
    </field>
  </record> 

  <!-- Vista del Wizard -->
    <record id="view_repack_create_wizard_form" model="ir.ui.view">
    <field name="name">repack.create.wizard.form</field>
    <field name="model">repack.create.wizard</field>
    <field name="arch" type="xml">
      <form string="Create Repack">
        <sheet>
          <group>
            <field name="sale_id" readonly="1"/>
          </group>

          <!-- IMPORTANTE: sin context aquí -->
          <field name="line_ids">
            <tree editable="bottom">
              <field name="sale_line_id" invisible="1" force_save="1"/>
              <field name="product_id" readonly="1" force_save="1"/>
              <field name="lot_id" groups="stock.group_production_lot"
                     domain="[('product_id', '=', product_id)]" readonly="1" force_save="1"/>
              <field name="qty" readonly="1" force_save="1"/>
              <field name="repack_type"/>
              <field name="repack_comments"/>
            </tree>
          </field>
        </sheet>
        <footer>
          <button string="Create" type="object" name="action_create_repack" class="btn-primary"/>
          <button string="Cancel" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

