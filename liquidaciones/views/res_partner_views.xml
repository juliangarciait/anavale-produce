<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="inherited_view_partner_form" model="ir.ui.view">
        <field name="name">inherited.view.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/notebook" position="inside">
                <page string="Tipo de Contrato" name="contract_type" groups="liquidaciones.contract_modification_group">
                    <group>
                        <field name="price_type"/>
                        <field name="commission_percentage"/>
                        <field name="freight_in"/>
                        <field name="mx_customs"/>
                        <field name="us_customs"/>
                        <field name="in_and_out"/>
                        <field name="box"/>
                        <field name="reference"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>