<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="inherited_purchase_order_form" model="ir.ui.view">
        <field name="name">inherited.purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group/group/field[@name='date_approve']" position="before">
                <field name="trouble_status"/>
            </xpath>

            <xpath expr="//form/sheet/notebook" position="inside">
                <page string="Tipo de Contrato" name="contract_type" groups="liquidaciones.contract_modification_group">
                    <group>
                        <field name="price_type"/>
                        <field name="commission_percentage"/>
                        <field name="freight_in"/>
                        <field name="mx_customs"/>
                        <field name="us_customs"/>
                        <field name="in_and_out"/>
                        <field name="box"/>
                        <field name="reference"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>